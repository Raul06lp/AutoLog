{
  "name": "autolog",
  "version": "1.0.0",
  "description": "Web para el control de vehículo tanto por parte de mecánicos como usuarios",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": " electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.autolog.app",
    "productName": "AutoLog",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "./icons/logo.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./icons/logo.ico"
    },
    "nsis": {
      "installerIcon": "./icons/logo.ico",
      "uninstallerIcon": "./icons/logo.ico",
      "installerHeaderIcon": "./icons/logo.ico"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ]
  },
  "author": "Raúl Lavara, Brandon Quispe, Carla Fernández",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "firebase": "^12.8.0",
    "remote": "^0.2.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raul06lp/AutoLog.git"
  },
  "bugs": {
    "url": "https://github.com/Raul06lp/AutoLog/issues"
  },
  "homepage": "https://github.com/Raul06lp/AutoLog#readme",
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "electron-reloader": "^1.2.3"
  }
}
